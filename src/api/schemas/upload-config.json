{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "Product",
    "description": "Upload configs",
    "type": "object",
    "required": [
        "tokens"
    ],
    "properties": {
        "start-time": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 date-time -- https://json-schema.org/understanding-json-schema/reference/string.html#id8"
        },
        "tokens": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "amount",
                    "distribution"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "variables": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "type",
                                "name",
                                "value"
                            ],
                            "properties": {
                                "type": {
                                    "const": "string"
                                },
                                "value": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "amount": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 1000
                    },
                    "distribution": {
                        "description": "distribution is biased and forces zero if it encounters a negative value. The mean must also always be greater than the SD",
                        "$ref": "#/$defs/distribution"
                    }
                }
            }
        },
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "timing"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "id must match some task in model"
                    },
                    "desription": {
                        "type": "string",
                        "description": "task description"
                    },
                    "timing": {
                        "description": "describes task duration as a distribution",
                        "$ref": "#/$defs/distribution"
                    }
                }
            }
        }
    },
    "$defs": {
        "distribution": {
            "type": "object",
            "oneOf": [
                {
                    "type": "object",
                    "required": [
                        "type",
                        "frequency"
                    ],
                    "properties": {
                        "type": {
                            "const": "constant"
                        },
                        "frequency": {
                            "type": "string",
                            "format": "duration",
                            "description": "Frequency described as a ISO 8601 duration.",
                            "example": "PT10M"
                        }
                    },
                    "additionalProperties": false
                },
                {
                    "description": "distribution is biased and forces zero if it encounters a negative value. The mean must also always be greater than the SD",
                    "type": "object",
                    "required": [
                        "type",
                        "frequency"
                    ],
                    "properties": {
                        "type": {
                            "const": "normal distribution"
                        },
                        "frequency": {
                            "type": "object",
                            "required": [
                                "mean",
                                "sd"
                            ],
                            "properties": {
                                "mean": {
                                    "type": "string",
                                    "description": "mean value",
                                    "format": "duration",
                                    "example": "PT10M"
                                },
                                "sd": {
                                    "type": "string",
                                    "description": "standard deviation",
                                    "format": "duration",
                                    "example": "PT10M"
                                }
                            }
                        }
                    },
                    "additionalProperties": false
                }
            ]
        }
    }
}